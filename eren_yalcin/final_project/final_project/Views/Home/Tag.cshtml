<div class="text-center">
    <h1 class="myTags">My Tags</h1>
</div>
<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-xl-4 col-md-6 col-12 mt-4">
            <div class="card">
                <div class="card-header">
                    @i.notName
                </div>
                <div class="card-body">
                    @i.TagContent
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-danger" asp-route-id="@i.TagId" asp-action="RemoveTag">Delete</a>
                    <a onclick="$('#UpdateTagModal').modal('show')" data-toggle="modal" asp-route-id="@i.TagId" asp-controller="Home" asp-action="UpdateTag">Update Tag</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create pro -->
<div class="modal" id="TagModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Tag</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Home/AddTag">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" name="TagId" id="TagId" class="form-control d-none" placeholder="ID will be generated automaticly" disabled />
                    </div>
                    <div class="form-group">
                        <input type="text" name="notName" id="notName" class="form-control" placeholder="Tag Header" required />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="TagContent" id="TagContent" rows="3" placeholder="Enter Your Tag Here.." required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-success">Create</button>

                </div>
            </form>
        </div>
    </div>
</div>




<!-- Update prod -->
<div class="modal" id="UpdateTagModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Tag</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Home/UpdateTag">
                <div class="modal-body">
                    @foreach (var i in Model)
                    {
                        <div class="form-group">
                            <input type="text" name="TagId" id="TagId" class="form-control d-none" placeholder="@i.TagId" disabled />
                        </div>
                        <div class="form-group">
                            <input type="text" name="notName" id="notName" class="form-control" value="@i.notName" required />
                        </div>
                        <div class="form-group">
                            <!-- update ettikten sonra yeni bir not olusuyor BUG -->
                            <textarea class="form-control" name="TagContent" id="TagContent" rows="3" required>@i.TagContent</textarea>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-success">Update</button>

                </div>
            </form>
        </div>
    </div>
</div>
</div>